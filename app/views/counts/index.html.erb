<div class="row">
<div class="large-12 columns">
  <h1>talllly</h1>
    <h2>We're all counting on you!</h2>
    <table>
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Description</th>
          <th>Count</th>
          <th>Goal</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @counts.each do |count| %>
          <tr class="count-section">
            <td><%= image_tag count.image.url(:medium) %></td>
            <td><%= count.name %></td>
            <td><%= count.description %></td>
            <td><%= count.count %></td>
            <td><%= count.goal %></td>
            <td><button><%= link_to 'Show', count %></button></td>
            <td><button><%= link_to 'Edit', edit_count_path(count) %></button></td>
            <td><button><%= link_to 'Destroy', count, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <button><%= link_to 'New Count', new_count_path %></button>
    <button><%= link_to "sign out", destroy_user_session_path, method: :delete %></button>
</div>
  </div>
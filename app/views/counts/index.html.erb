<h1>Acto-Tracker 9000</h1>
<p>We're all counting on you!</p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Count</th>
      <th>Goal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @counts.each do |count| %>
      <tr>
        <td><%= count.name %></td>
        <td><%= count.description %></td>
        <td><%= count.count %></td>
        <td><%= count.goal %></td>
        <td><%= link_to 'Show', count %></td>
        <td><%= link_to 'Edit', edit_count_path(count) %></td>
        <td><%= link_to 'Destroy', count, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Count another Activity', new_count_path %>
<%= link_to "sign out", destroy_user_session_path, method: :delete %>